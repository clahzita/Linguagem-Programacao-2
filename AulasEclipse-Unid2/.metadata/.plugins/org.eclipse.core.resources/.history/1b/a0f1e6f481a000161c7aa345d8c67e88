		bancoFornecedor.add(fornecedor);

	}

	@Override
	public void inserirEmpregado(Empregado empregado) {
		bancoEmpregado.add(empregado);

	}

	@Override
	public void inserirSetor(Setor setor) {
		bancoSetor.add(setor);

	}

